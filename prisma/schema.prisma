generator client {
  provider = "prisma-client-js"
}

model User {
  id          String    @id @default(cuid())
  fullName    String
  email       String
  password    String
  role        String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now())
}

model location {
  id          String    @id @default(cuid())
  address     String?
  city        String?
  country     String?
  lat         Float
  lng         Float
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now())
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
